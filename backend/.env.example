# Database Configuration
MONGODB_URI=mongodb://localhost:27017/alerta360

# Server Configuration
PORT=3000

# Auth (JWT) - required
JWT_SECRET=your_jwt_secret_here

# Google OAuth (optional, for "Login with Google")
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# CORS (optional, e.g. http://localhost:5173 for local frontend)
CORS_ORIGIN=

# Frontend URL for OAuth redirect (optional, defaults to http://localhost:5173)
FRONTEND_URL=

# Firebase Admin for mobile token validation. Path to service account JSON.
GOOGLE_APPLICATION_CREDENTIALS=

# Image moderation (NSFW.js). Set to "false" to disable in development.
IMAGE_MODERATION_ENABLED=true
